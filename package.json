{
  "name": "@ar.io/wayfinder-router",
  "version": "0.1.0",
  "description": "Lightweight proxy router for ar.io network gateways with verification",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "test": "vitest run",
    "test:watch": "vitest",
    "stats": "tsx scripts/show-stats.ts",
    "clear:telemetry": "tsx scripts/clear-telemetry.ts",
    "clear:all": "tsx scripts/clear-all.ts"
  },
  "keywords": [
    "arweave",
    "ar.io",
    "gateway",
    "proxy",
    "router",
    "wayfinder"
  ],
  "author": "AR.IO",
  "license": "Apache-2.0",
  "dependencies": {
    "@ar.io/sdk": "^3.23.0",
    "@ar.io/wayfinder-core": "^1.9.0",
    "@hono/node-server": "^1.13.7",
    "better-sqlite3": "^11.7.0",
    "dotenv": "^17.2.3",
    "hono": "^4.6.0",
    "lru-cache": "^11.0.0",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "undici": "^7.16.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.4",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
